{
  "name": "heartcup",
  "version": "1.2.0",
  "description": "hearcup.",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    }
  },
  "watch": {
      "build:pug": {
      "patterns": ["src"],
      "extensions": "pug",
      "quiet": false
    }
  },
  "scripts": {
    "pug": "pug src/index.pug --out dist/",
    "vendorjs": "cat node_modules/jquery/dist/jquery.min.js > dist/assets/js/vendor.js",
    "vendorcss": "cp node_modules/node-normalize-scss/_normalize.scss src/assets/css/1-tools/_normalize.scss",
    "clean": "rm -f dist/{assets/css/*,js/*,assets/img/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/assets/css/*.css",
    "scss": "node-sass src/assets/css/main.sass dist/assets/css/main.css --indented-syntax",
    "lint": "eslint src/assets/js",
    "uglify": "mkdir -p dist/assets/js && uglifyjs src/assets/js/*.js --screw-ie8 -m -o dist/assets/js/app.js && uglifyjs src/assets/js/*.js --screw-ie8 -m -c -o dist/assets/js/app.min.js",
    "imagemin": "imagemin src/assets/img/* -o dist/assets/img",
    "icons": "svgo -f src/assets/img/icons && mkdir -p dist/assets/img && svg-sprite-generate -d src/assets/img/icons -o dist/assets/img/icons.svg",
    "serve": "browser-sync start --c bs-config.js --server './dist' --files './dist'",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:pug": "npm run pug",
    "build:images": "npm run imagemin",
    "build:all": "npm run build:css && npm run build:js && npm run build:images  && npm run build:pug",
    "watch:css": "onchange 'src/assets/css/*' -v -- npm run build:css",
    "watch:js": "onchange 'src/assets/js/*' -v -- npm run build:js",
    "watch:pug": "onchange 'src/assets/js/*' -v -- npm run watch",
    "watch:images": "onchange 'src/assets/img' -v -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images watch:pug",
    "postinstall": "npm run build:all && npm run watch:all"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^3.5.0",
    "eslint-config-standard": "^6.0.1",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "imagemin-cli": "^3.0.0",
    "jquery": "^3.1.1",
    "node-normalize-scss": "^1.3.2",
    "node-sass": "^3.7.0",
    "normalize": "^0.3.1",
    "normalize-scss": "^5.0.3",
    "npm-run-all": "^3.1.0",
    "npm-watch": "^0.1.6",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.5.2",
    "pug": "^2.0.0-beta6",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.0",
    "uglify-js": "^2.6.2"
  }
}
